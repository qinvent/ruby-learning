<%= turbo_frame_tag author do %>
  <div class="author">
    <table>
      <tr>
        <td>
          <%= link_to author.name, author_path(author)%>
        </td>
        <td>
          <%= button_to "Edit", edit_author_path(author) , method:"get" ,class:"btn btn-warning" %>
        </td>
        <td>
        <%= button_to "Destroy", author_path(author), method: "delete", confirm: "Are you sure?",class:"btn btn-danger" %>
        </td>
      </tr>
    </table>
  </div>
<% end %>