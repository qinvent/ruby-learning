<h1><%= @user.name %></h1>

<p>Age : <%= @user.age %></p>

<p>Email : <%= @user.email %></p>

<p>Status : <%= @user.status ? "active" : "inactive" %></p>

<p>Address : <%= @user.address %></p>

<ul>
  <li><%= link_to "Edit", edit_user_path(@user) %></li>

  <li><%= link_to "Destroy", user_path(@user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }%></li>
</ul>